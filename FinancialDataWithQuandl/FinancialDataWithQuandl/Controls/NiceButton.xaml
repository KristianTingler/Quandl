<UserControl x:Class="NiceButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinancialDataWithQuandl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave">
        <Grid x:Name="gridButton">
            <Border x:Name="BackgroundBorder" CornerRadius="10" />
            <Border x:Name="hoverBorder" Background="#40FFFFFF" CornerRadius="10" Visibility="Collapsed" IsHitTestVisible="False" />
            <Border x:Name="selectedBorder" Background="#AAFFFFFF" CornerRadius="10" Visibility="Collapsed" IsHitTestVisible="False" />
            <TextBlock x:Name="txtText" Grid.Row="0" Grid.Column="0" Text="Value Investment Button" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#000000" Margin="10,0,10,0" />
        </Grid>
    </Grid>
</UserControl>
